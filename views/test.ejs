<!DOCTYPE html>
<%- include ./partials/head %>
<body>
  <% include ./partials/navbar %>
  <div class="container">
    <div id="book" class="mt-4">
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-heading bg-main-color">
              <h3>Book List</h3>
            </div>
            <div class="panel-body">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Publisher</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% books.forEach(function(book){ %>
                    <tr>
                      <td><%= book.book_title %></td>
                      <td><img src="<%= book.book_imageUrl%>" alt=""></td>
                      <td><%= book.book_publisher %></td>
                      <td>
                        <a href="#edit" class="btn btn-primary">Remove</a> &nbsp;
                        <a href="#trade" class="btn btn-success">Trade</a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include ./partials/footer %>
  <%- include ./partials/script %>

</body>