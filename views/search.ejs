<!DOCTYPE html>
  <%- include ./partials/head %>
<body style="background-color:rgb(212, 212, 212);">
    <%- include ./partials/navbar %>
    <div class="container">
        <div class="row mt-4 mb-4">
            <% books.forEach(function(book){ %>
              <div class="col-md-3 mb-4">
                  <div class="card">
                    <h6 class="card-header"><%= book.title %></h6>
                    <img class="center-block mt-4" style="height: 168px; width: 128px; display: block;" src="<%= book.thumbnail %>" alt="Card image">
                    <div class="card-block">
                      <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
                      <% if(user) { %>
                        <form action="/profile/addBook" method="post">
                          <input type="hidden" name="book_id" value="<%= book.id %>">
                          <input type="hidden" name="book_title" value="<%= book.title %>">
                          <input type="hidden" name="book_authors" value="<%= book.authors %>">
                          <input type="hidden" name="book_publisher" value="<%= book.publisher %>">
                          <input type="hidden" name="book_description" value="<%= book.description %>">
                          <input type="hidden" name="book_link" value="<%= book.link %>">
                          <input type="hidden" name="book_imageUrl" value="<%= book.thumbnail %>">
                          <input type="submit" class="card-link btn btn-primary btn-block" value="Add Book">
                        </form>                       
                      <% } else { %>
                        <a href="/auth/login" class="card-link btn btn-primary btn-block" target="_blank">Login To Add Book</a>
                      <% } %>
                    </div>
                  </div>
              </div>  
            <% }) %>
          </div>
    </div>
    <br>
    <!-- Footer -->
    <%- include ./partials/footer %>
    
    <!--Script -->
    <%- include ./partials/script %>
</body>