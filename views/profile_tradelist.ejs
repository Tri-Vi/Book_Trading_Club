<!DOCTYPE html>
<%- include ./partials/head %>
<body>
  <% include ./partials/navbar %>
  <div class="container">
    <div id="book" class="mt-4">
      <% if(books.length >0) {%>
        <div class="row">
            <div class="col-md-12">
              <div class="panel panel-default">
                <div class="panel-heading bg-main-color">
                  <h3>Book List</h3>
                </div>
                <div class="panel-body">
                  <table class="table table-striped table-hover">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Image</th>
                        <th>Publisher</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% books.forEach(function(book, i){ %>
                        <tr>
                          <td><%= i+1 %></td>
                          <td><a href="<%= book.book_link %>" style="text-decoration: none;"><%= book.book_title %></a></td>
                          <td><img src="<%= book.book_imageUrl%>" alt=""></td>
                          <td><%= book.book_publisher %></td>
                          <td>
                            <form action="/profile/removeBook/<%= book._id %>" method="post">
                              <input type="submit" class="btn btn-primary btn-block" value="Remove">
                            </form>&nbsp;
                            <form action="/profile/trade/<%= book._id%>" method="">
                                <input type="submit" class="btn btn-success btn-block" value="Trade">
                            </form>    
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
      <% } else { %>
        <h4>Your book list is currently empty</h4>
      <% } %>

      
    </div>
  </div>
  <%- include ./partials/footer %>
  <%- include ./partials/script %>

</body>