<!DOCTYPE html>
<%- include ./partials/head %>
<body>
  <%- include ./partials/navbar %>
  <% if(message.length > 0) { %>
    <div class="alert alert-dismissible alert-warning container mt-3">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4>Warning!</h4>
      <p><%= message %></p>
    </div>
  <% }%>
  <div id="loginForm" class="container mt-4">
    <h2>Log in </h2>
    <form action="/auth/login" method="post">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" placeholder="Email" id="loginEmailTxt" name="email" required class="form-control">
      </div>
      <div class="form-group">
        <label for="email">Password</label>
        <input type="password" placeholder="Password" id="loginEmailTxt" name="password" required class="form-control">
      </div>
      <input type="submit" class="btn btn-primary" value="Log In">&nbsp;&nbsp;
      <a href="/auth/signup" class="btn btn-info">Sign Up</a>
    </form>
  </div>
  <%- include ./partials/footer %>
  <!--Script -->
  <%- include ./partials/script %>
</body>